---
import Layout from '../layouts/Layout.astro';
import NftDetail from '../components/Nft-detail.astro'

---

<Layout>
	<main class="relative bg-glow flex flex-col h-[100vh] items-center gap-3 p-2 pb-0 m-auto">
        <a class="cursor-pointer self-start" href="/">
            <h1 
            class="text-white text-[1.8rem] md:text-[3rem] scale-[60%] md:scale-50 "
            style="view-transition-name: title"
            >
                NFT Market
            </h1> 
        </a>
        <NftDetail/>
        <p 
        class="text-white absolute bottom-5 right-10" 
        style="view-transition-name: oscar"
        >
            Developed by 
            <a 
            class="text-[var(--bg-contrast)]" 
            target="_blank" 
            href="https://github.com/oscarprdev/Nft-marketplace">
            Oscar Perez</a>
        </p>
        <span class='z-[-10] noise absolute top-0 w-[100%] h-[100%] md:h-[100vh] content-none'/>
	</main>
</Layout>
